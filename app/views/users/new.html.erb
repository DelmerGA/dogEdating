<h1>Sign up</h1><br/>

<%= form_for @user do |f| %>
  
  <%= f.text_field :name, placeholder: 'Name' %><br /><br />
  <%= f.text_field :email, placeholder: 'Email' %><br /><br />
  <%= f.password_field :password, placeholder: 'Password'%><br /><br />
  <%= f.password_field :password_confirmation, placeholder: 'Confirm Password' %><br /><br />
  <%= f.submit :value => 'Create my account' %>
  
<% end %>
