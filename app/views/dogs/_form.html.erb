<%= form_for @dog, :html => {:multipart => true} do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :breed, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :breed, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :age, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :age, :class => 'text_field' %>
    </div>
  </div>
  
   <fieldset>          
        <div class="control-group">
            <label class="control-label">Home Park:</label>
        <div class="controls">
            <select>
                <option value="1">Name of Park</option>
            </select>
        </div>
        </div>
    </fieldset>

  <div class="controls">
    <%= f.hidden_field :user_id, :class => 'hidden_field' %>
    </div>
  
  <div class="control-group">
    <%= f.label :image, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :image %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                dogs_path, :class => 'btn' %>
  </div>
<% end %>
